%p#notice= notice
%h1 Listing Controls
%table
  %thead
    %tr
      %th Kind
      %th{:colspan => "3"}
  %tbody
    - @controls.each do |control|
      %tr
        %td= control.kind
        %td= link_to 'Show', control
        %td= link_to 'Edit', edit_control_path(control)
        %td= link_to 'Destroy', control, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Control', new_control_path
