.nested-fields
  %table.table.table-striped
    %thead
      %tr
        %th Kind
        %th Name
        %th Default Value
        %th Action
    %tbody
      %tr
        %td
          .form-group
            = f.select :kind, options_for_select(ControlItem::KINDS, f.object.kind), class: 'form-control'
        %td
          .form-group
            = f.text_field :name, class: 'form-control'
        %td
          .form-group
            = f.text_field :value, class: 'form-control'
        %td
          = link_to_remove_association "x", f, class: 'btn btn-sm btn-danger'
